{
  "name": "pat-contracts",
  "version": "1.0.0",
  "description": "PAT Token smart contracts for zkSync Era",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "deploy:testnet": "npx hardhat deploy-zksync --script deploy.ts --network zkSyncTestnet",
    "deploy:mainnet": "npx hardhat deploy-zksync --script deploy.ts --network zkSyncMainnet",
    "verify": "npx hardhat verify"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@openzeppelin/contracts-upgradeable": "^5.0.0"
  },
  "devDependencies": {
    "@matterlabs/hardhat-zksync-deploy": "^1.1.2",
    "@matterlabs/hardhat-zksync-solc": "^1.0.6",
    "@matterlabs/hardhat-zksync-verify": "^1.2.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/hardhat-upgrades": "^3.0.0",
    "@types/node": "^20.10.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "hardhat": "^2.19.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2",
    "zksync-ethers": "^6.0.0"
  },
  "keywords": [
    "pat",
    "token",
    "erc20",
    "zksync",
    "ethereum"
  ],
  "license": "MIT"
}
