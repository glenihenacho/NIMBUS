# Intent Detection Engine - Environment Variables
# Copy this to .env and fill in your values

# === DATABASE ===
POSTGRES_USER=intent_user
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_HOST=postgres
POSTGRES_DB=intent_engine

# === BIGQUERY (for analytics) ===
GCP_PROJECT_ID=your-gcp-project
GCP_CREDENTIALS_JSON=/path/to/credentials.json
BIGQUERY_DATASET=intent_engine

# === RUDDERSTACK ===
RUDDERSTACK_WORKSPACE_TOKEN=your-workspace-token
RUDDERSTACK_BROWSER_WRITE_KEY=your-browser-write-key
RUDDERSTACK_CONFIG_BACKEND_URL=https://api.rudderlabs.com

# === LLM API KEYS ===
# Mistral (if using API instead of self-hosted)
MISTRAL_API_KEY=your-mistral-api-key

# DeepSeek (if using API instead of self-hosted)
DEEPSEEK_API_KEY=your-deepseek-api-key

# === RASA ===
RASA_LICENSE_KEY=your-rasa-pro-license

# === MONITORING ===
GRAFANA_USER=admin
GRAFANA_PASSWORD=changeme_secure_password

# Alertmanager (optional)
ALERTMANAGER_SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERTMANAGER_PAGERDUTY_KEY=your-pagerduty-key

# === AWS (optional: for S3 archival) ===
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=intent-engine-archive

# === REDIS ===
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=  # Optional

# === ROUTER CONFIG ===
LOG_LEVEL=info
GATING_POLICY=balanced  # conservative, balanced, aggressive

# === DEPLOYMENT ===
ENVIRONMENT=production  # development, staging, production
